GROQ_API_KEY=

# Free trial cap (specs per IP per day). Default: 5
RATE_LIMIT_PER_DAY=5

# Google Analytics 4 Measurement ID (e.g. G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Feedback email — Resend (preferred)
RESEND_API_KEY=
# Resend Segment ID — keeps signups separated by project (same team, different segments)
# resend.com → Segments → create a segment for this project → copy the ID
RESEND_SEGMENT_ID=

# Feedback email — Gmail fallback
GMAIL_USER=
GMAIL_APP_PASSWORD=
FEEDBACK_TO=
